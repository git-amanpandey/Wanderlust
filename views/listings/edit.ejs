<% layout('/layouts/boilerplate.ejs') -%>
<link rel="stylesheet" href="/css/style.css">
<body>
   
<div class="row">
 <div class="col-8 offset-2">
     <h2>Edit Your Listing</h2>
 <form action="/listing/<%=list._id %>?_method=put" method="post">
            <div class="mb-3">
                <label for="title" class="form-lable">Title</label>
                <input type="text"class="form-control" name="list[title]"value="<%=list.title%>">
            </div>
            <div class="mb-3">
                 <label for="description"class="form-lable">Description</label>
                <textarea name="list[description]"class="form-control"value=" <%= list.description %>"></textarea>
        </div>
           
           <div class="mb-3">
             <label for="image"class="form-lable">Image</label>
            <input type="text" inputmode="url"class="form-control" name="list[image][url]"value="<%=list.image.url %>" >
    </div>
           
                <div class="row">
                    <div class="mb-3 col-md-4"><label for="price"class="form-lable">Price</label>
                        <input type="number"class="form-control" inputmode="numeric" name="list[price]" value="<%=list.price %>" >
            </div>
                    <div class="mb-3 col-md-8"> <label for="location"class="form-lable">Location</label>
                        <input type="text" class="form-control"name="list[location]"value="<%=list.location%>" >
            </div>
                         
                </div>  
                <div class="mb-3">
                    <label for="Country"class="form-lable">Country</label>
                    <input type="text"class="form-control" name="list[country]"value="<%=list.country%>" >
                   </div>
                <!-- <form action="/listing/<%= list._id %>?_method=put" method="post"> -->
                   <div class="d-grid gap-2 d-block col-6 offset-3">
                    <input type="submit" value="Submit"class="btn btn-success">
                   </div>  
