<% layout('/layouts/boilerplate.ejs') -%>
<style>
   .error-container {
        text-align: center;
        max-width: 600px;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: 20px;
    }
    .error-image {
        max-width: 100%;
        height: auto;
        margin-bottom: 20px;
    }

    .error-message {
        font-size: 18px;
        color: #555;
        margin-bottom: 20px;
    }
    .xyz{
        margin-top: 25px;
    }
    @media (max-width: 600px) {
        .error-container {
            margin: 10px;
        }
    }
</style>
<div class="row">
<div class="col-7 offset-3 xyz">
<div class="error-container">
    <img src="https://st.depositphotos.com/1006899/2650/i/380/depositphotos_26505551-stock-photo-error-metaphor.jpg" alt="Error Cat" class="error-image">
    <div class="error-message">
        <p><b><%= status %></b> Oops! Check this out </p>
        <p><%= message %></p>
    </div>
</div>
</div>
</div>