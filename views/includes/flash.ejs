<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
  crossorigin="anonymous"
/>
<% if (success && success.length) { %>
<div
  class="toast d-flex justify-content-center align-items-center text-white bg-success border-0 mt-3 mx-auto"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
>
  <div class="d-flex justify-content-between">
    <div class="toast-body"><%= success %></div>
    <button
      type="button"
      class="btn-close btn-close-white ms-3 my-auto"
      data-bs-dismiss="toast"
      aria-label="Close"
    ></button>
  </div>
</div>

<% } %>

<!-- Error-flash -->
<% if (error && error.length) { %>

<div
  class="toast d-flex justify-content-center align-items-center text-white bg-danger border-0 mt-3 mx-auto"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
>
  <div class="d-flex justify-content-between">
    <div class="toast-body"><%= error %></div>
    <button
      type="button"
      class="btn-close btn-close-white ms-3 my-auto"
      data-bs-dismiss="toast"
      aria-label="Close"
    ></button>
  </div>
</div>
<% } %>
